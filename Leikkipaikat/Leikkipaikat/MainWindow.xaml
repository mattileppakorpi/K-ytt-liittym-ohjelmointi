<Window x:Class="Leikkipaikat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leikkipaikat"
        mc:Ignorable="d"
        Title="Leikkipaikat" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="btnGetPlaygrounds" Content="Hae Leikkipaikat" Click="btnGetPlaygrounds_Click"></Button>
            
        <StackPanel Orientation="Horizontal">
            <DataGrid x:Name="dgPlaygrounds" MinWidth="100" ></DataGrid>
            <DataGrid x:Name="dgInfo" MinWidth="100"></DataGrid>
            <DataGrid x:Name="dgEquipment" MinWidth="100"></DataGrid>
            <DataGrid x:Name="dgFaults" MinWidth="100"></DataGrid>
            
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
